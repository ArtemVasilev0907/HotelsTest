<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_rating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rating_rounded_background"
    android:layout_marginStart="@dimen/baseMargin"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_baseline_star_24">

    </ImageView>

    <TextView
        android:id="@+id/tvHotelRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="2dp"
        android:textColor="#FFA800"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvHotelRatingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        android:layout_marginStart="4dp"
        android:layout_marginEnd="@dimen/baseMargin"
        android:textColor="#FFA800"
        android:textSize="16sp"/>


</LinearLayout>
